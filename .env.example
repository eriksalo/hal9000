# Anthropic API Key
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_api_key_here

# Camera settings
# CAMERA_TYPE: 'picamera2' for Pi Camera, 'opencv' for USB webcam
CAMERA_TYPE=picamera2
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=15
# CAMERA_INDEX: Only used for opencv camera type (USB webcam index)
CAMERA_INDEX=0

# Audio device settings
# Use 'default' for system default, or specific device like 'plughw:0,0'
# Run 'arecord -l' to list input devices
# Run 'aplay -l' to list output devices
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default

# Microphone gain (amplification factor for speech recognition)
# Increase if speech is too quiet, decrease if distorted
MIC_GAIN=5
